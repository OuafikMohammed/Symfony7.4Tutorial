{% extends 'base.html.twig' %}

{% block title %}Edit Post - Posts Management{% endblock %}

{% block body %}
    <a href="{{ path('post_index') }}" class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-700 mb-6 font-medium">
        ← Back to Posts
    </a>
    
    <div class="mb-8">
        <h1 class="text-blue-600 mb-2">✏️ Edit Post</h1>
        <p class="text-slate-600">{{ post.title }}</p>
    </div>

    <div class="card p-8 max-w-2xl">
        <form method="post" class="space-y-6">
            <div class="form-group">
                <label for="title" class="form-label">Post Title</label>
                <input type="text" id="title" name="title" placeholder="Enter post title" value="{{ post.title }}" required autofocus class="form-input text-lg">
            </div>

            <div class="form-group">
                <label for="content" class="form-label">Post Content</label>
                <textarea id="content" name="content" placeholder="Enter post content" required class="form-input min-h-64 font-mono text-sm">{{ post.content }}</textarea>
            </div>

            <div class="flex gap-3 pt-4 border-t border-slate-200">
                <button type="submit" class="btn btn-success">✓ Update Post</button>
                <a href="{{ path('post_show', {id: post.id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}
