{% extends 'base.html.twig' %}

{% block title %}Posts - Posts Management{% endblock %}

{% block body %}
    <div class="mb-8">
        <h1 class="text-blue-600 mb-2">ğŸ“ Posts Management</h1>
        <p class="text-slate-600 text-lg">Create, edit, and manage your blog posts</p>
    </div>
    
    <!-- Quick Create Section -->
    <div class="card p-6 mb-8 border-l-4 border-l-blue-600 bg-gradient-to-r from-blue-50 to-transparent">
        <h2 class="text-blue-700 mb-4 flex items-center gap-2">
            <span class="text-2xl">âš¡</span> Quick Create Post
        </h2>
        <form method="post" action="{{ path('post_create') }}" class="space-y-4">
            <div class="form-group">
                <label for="title" class="form-label">Post Title</label>
                <input type="text" id="title" name="title" placeholder="Enter an amazing post title..." required autofocus class="form-input">
            </div>

            <div class="form-group">
                <label for="content" class="form-label">Post Content</label>
                <textarea id="content" name="content" placeholder="Write your post content here..." required class="form-input min-h-32"></textarea>
            </div>

            <div class="flex gap-3 pt-2">
                <button type="submit" class="btn btn-success">âœ“ Create Post</button>
                <a href="{{ path('post_create') }}" class="btn btn-secondary">ğŸ“‹ Open Full Form</a>
            </div>
        </form>
    </div>

    <!-- Posts List Section -->
    <div>
        <h2 class="text-slate-800 mb-6 flex items-center gap-2">
            <span class="inline-block w-1 h-8 bg-blue-600 rounded"></span>
            All Posts
        </h2>
        
        {% if posts|length > 0 %}
            <div class="grid gap-4">
                {% for post in posts %}
                    <div class="card p-5 hover:shadow-lg transition-all duration-300 border-l-4 border-l-purple-500">
                        <div class="flex justify-between items-start mb-3">
                            <div class="flex-1">
                                <a href="{{ path('post_show', {id: post.id}) }}" class="text-xl font-semibold text-blue-600 hover:text-blue-700 transition">
                                    {{ post.title }}
                                </a>
                                <p class="text-sm text-slate-500 mt-1">
                                    <span class="badge badge-blue">{{ post.content|length }} characters</span>
                                </p>
                            </div>
                        </div>
                        
                        <p class="text-slate-600 mb-4 line-clamp-2">{{ post.content }}</p>
                        
                        <div class="flex gap-2 pt-3">
                            <a href="{{ path('post_show', {id: post.id}) }}" class="btn btn-info text-sm">ğŸ‘ï¸ View</a>
                            <a href="{{ path('post_edit', {id: post.id}) }}" class="btn btn-primary text-sm">âœï¸ Edit</a>
                            <form method="post" action="{{ path('post_delete', {id: post.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete &quot;{{ post.title }}&quot;?')">
                                <button type="submit" class="btn btn-danger text-sm">ğŸ—‘ï¸ Delete</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info p-8 text-center rounded-xl">
                <div class="text-4xl mb-3">ğŸ“­</div>
                <p class="text-lg font-medium">No posts yet. Create one to get started! ğŸ‘†</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
