{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Posts Management{% endblock %}

{% block body %}
    <a href="{{ path('post_index') }}" class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-700 mb-6 font-medium">
        â† Back to Posts
    </a>
    
    <div class="card p-8 mb-6 border-l-4 border-l-purple-600 bg-gradient-to-r from-purple-50 to-transparent">
        <div class="flex justify-between items-start mb-4">
            <div>
                <h1 class="text-purple-700 mb-2">{{ post.title }}</h1>
                <div class="flex items-center gap-2 text-sm text-slate-600">
                    <span class="badge badge-blue">#{{ post.id }}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card p-8 mb-8 bg-slate-50 border-l-4 border-l-slate-400">
        <div class="prose prose-slate max-w-none">
            <p class="text-slate-800 leading-relaxed whitespace-pre-wrap text-base">{{ post.content }}</p>
        </div>
    </div>

    <div class="flex gap-3 pb-6">
        <a href="{{ path('post_edit', {id: post.id}) }}" class="btn btn-primary">âœï¸ Edit</a>
        <form method="post" action="{{ path('post_delete', {id: post.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this post?')">
            <button type="submit" class="btn btn-danger">ğŸ—‘ï¸ Delete</button>
        </form>
    </div>
{% endblock %}
