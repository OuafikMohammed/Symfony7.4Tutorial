{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Posts Management{% endblock %}

{% block body %}
    <a href="{{ path('post_index') }}" class="back-link">‚Üê Back to Posts</a>
    
    <div class="post-info">
        <h1>{{ post.title }}</h1>
        <p style="color: #666; font-size: 12px; margin-top: 5px;">Post ID: #{{ post.id }}</p>
    </div>

    <div style="background-color: #fafafa; padding: 20px; border-radius: 4px; margin-bottom: 20px;">
        <p style="white-space: pre-wrap; line-height: 1.6;">{{ post.content }}</p>
    </div>

    <div class="actions" style="display: flex; gap: 10px;">
        <a href="{{ path('post_edit', {id: post.id}) }}" class="button">Edit</a>
        <form method="post" action="{{ path('post_delete', {id: post.id}) }}" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this post?')">
            <button type="submit" class="danger">Delete</button>
        </form>
    </div>
{% endblock %}
