{% extends 'base.html.twig' %}

{% block title %}User Dashboard{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">Welcome back!</h1>
            <p class="text-slate-300 text-lg">Manage your account and explore features</p>
        </div>

        <!-- Dashboard Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <!-- Profile Card -->
            <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-200 overflow-hidden">
                <div class="h-2 bg-gradient-to-r from-blue-600 to-cyan-600"></div>
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-bold text-gray-900">Profile</h3>
                        <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <p class="text-gray-600 mb-4">View and edit your profile information</p>
                    <a href="{{ profileUrl }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
                        Go to Profile
                    </a>
                </div>
            </div>

            <!-- Settings Card -->
            <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-200 overflow-hidden">
                <div class="h-2 bg-gradient-to-r from-purple-600 to-pink-600"></div>
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-bold text-gray-900">Settings</h3>
                        <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <p class="text-gray-600 mb-4">Customize your account preferences</p>
                    <a href="{{ settingsUrl }}" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
                        Go to Settings
                    </a>
                </div>
            </div>

            <!-- Security Card -->
            <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-200 overflow-hidden">
                <div class="h-2 bg-gradient-to-r from-green-600 to-emerald-600"></div>
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-bold text-gray-900">Security</h3>
                        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                    </div>
                    <p class="text-gray-600 mb-4">Change your password and security options</p>
                    <a href="{{ settingsUrl }}?section=security" class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
                        Security Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Account Status -->
        <div class="bg-gradient-to-r from-slate-800 to-slate-700 rounded-xl shadow-lg p-6 text-white">
            <h2 class="text-2xl font-bold mb-4">Account Status</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-slate-700 rounded-lg p-4">
                    <p class="text-slate-300 text-sm mb-1">Email Verified</p>
                    <p class="text-2xl font-bold text-green-400">âœ“ Verified</p>
                </div>
                <div class="bg-slate-700 rounded-lg p-4">
                    <p class="text-slate-300 text-sm mb-1">Account Status</p>
                    <p class="text-2xl font-bold text-green-400">Active</p>
                </div>
                <div class="bg-slate-700 rounded-lg p-4">
                    <p class="text-slate-300 text-sm mb-1">Member Since</p>
                    <p class="text-lg font-bold">{{ "now"|date("F Y") }}</p>
                </div>
            </div>
        </div>

        <!-- Logout Button -->
        <div class="mt-8 flex justify-center">
            <a href="{{ logoutUrl }}" class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200">
                Sign Out
            </a>
        </div>
    </div>
</div>
{% endblock %}
