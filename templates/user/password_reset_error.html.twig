{% extends 'base.html.twig' %}

{% block title %}Password Reset Error{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-red-900 to-slate-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl overflow-hidden">
        <!-- Header with Error Icon -->
        <div class="bg-gradient-to-r from-red-600 to-pink-600 px-6 py-8 text-center">
            <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-white mb-4">
                <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-white">Reset Failed</h1>
            <p class="text-red-100 text-center mt-2">Unable to reset your password</p>
        </div>

        <!-- Content -->
        <div class="p-8 space-y-6">
            <!-- Error Message -->
            <div class="bg-red-50 border-2 border-red-200 rounded-lg p-4">
                <h2 class="text-lg font-semibold text-red-900 mb-2">Error</h2>
                <p class="text-red-700 text-sm leading-relaxed">
                    The password reset link you used is either invalid, expired, or has already been used. Please request a new password reset.
                </p>
            </div>

            <!-- Possible Reasons -->
            <div class="space-y-3">
                <h3 class="font-semibold text-gray-900 text-sm">Possible reasons:</h3>
                <ul class="space-y-2 text-xs text-gray-600">
                    <li class="flex items-start">
                        <svg class="h-4 w-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <span>The reset link expired (valid for 1 hour only)</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="h-4 w-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <span>The link was already used to reset the password</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="h-4 w-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <span>The user account may no longer exist</span>
                    </li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="space-y-3 pt-4">
                <a href="{{ newRequestUrl }}" class="block w-full text-center bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-700 hover:to-orange-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105">
                    Request New Reset Link
                </a>
                <a href="#" class="block w-full text-center border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold py-3 px-4 rounded-lg transition-colors duration-200">
                    Back to Login
                </a>
            </div>

            <!-- Help Section -->
            <div class="bg-yellow-50 border-l-4 border-yellow-600 p-4">
                <p class="text-xs text-yellow-700">
                    <strong>Need help?</strong> If you continue to have issues, please contact our support team.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
