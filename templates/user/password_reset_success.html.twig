{% extends 'base.html.twig' %}

{% block title %}Password Reset Successful{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-slate-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl overflow-hidden">
        <!-- Header with Success Icon -->
        <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-8 text-center">
            <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-white mb-4">
                <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-white">Password Reset!</h1>
            <p class="text-green-100 text-center mt-2">Your password has been updated</p>
        </div>

        <!-- Content -->
        <div class="p-8 space-y-6">
            <!-- Success Message -->
            <div class="bg-green-50 border-2 border-green-200 rounded-lg p-4">
                <h2 class="text-lg font-semibold text-green-900 mb-2">Success!</h2>
                <p class="text-green-700 text-sm leading-relaxed">
                    Your password has been successfully reset. You can now sign in with your new password.
                </p>
            </div>

            <!-- Security Notice -->
            <div class="bg-blue-50 border-l-4 border-blue-600 p-4">
                <p class="text-sm text-blue-700">
                    <strong>Remember:</strong> Keep your password safe and never share it with anyone.
                </p>
            </div>

            <!-- Next Steps -->
            <div class="space-y-3">
                <h3 class="font-semibold text-gray-900">What to do next:</h3>
                <ol class="space-y-2 text-sm text-gray-600">
                    <li class="flex items-center">
                        <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-600 text-white text-xs font-bold mr-2 flex-shrink-0">âœ“</span>
                        <span>Your password has been changed</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-600 text-white text-xs font-bold mr-2 flex-shrink-0">1</span>
                        <span>Sign in with your new password</span>
                    </li>
                    <li class="flex items-center">
                        <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-green-600 text-white text-xs font-bold mr-2 flex-shrink-0">2</span>
                        <span>Access your account</span>
                    </li>
                </ol>
            </div>

            <!-- Action Button -->
            <div class="pt-4">
                <a href="{{ loginUrl }}" class="block w-full text-center bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105">
                    Go to Login
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
