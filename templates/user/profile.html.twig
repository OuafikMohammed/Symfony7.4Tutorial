{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <!-- Profile Header -->
        <div class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-xl shadow-lg p-8 text-white mb-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="h-20 w-20 bg-white rounded-full flex items-center justify-center">
                        <svg class="h-12 w-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div class="ml-6">
                        <h1 class="text-3xl font-bold">John Doe</h1>
                        <p class="text-blue-100">@john_doe</p>
                    </div>
                </div>
                <div class="text-right">
                    <div class="text-sm text-blue-100">Member Since</div>
                    <div class="text-2xl font-bold">Jan 2026</div>
                </div>
            </div>
        </div>

        <!-- Profile Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Profile Card -->
            <div class="lg:col-span-2 space-y-6">
                <!-- About Section -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">About</h2>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
                            <p class="text-gray-900">john@example.com</p>
                            <p class="text-xs text-green-600 mt-1">✓ Verified</p>
                        </div>
                        <div class="border-t border-gray-200 pt-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Username</label>
                            <p class="text-gray-900">john_doe</p>
                        </div>
                        <div class="border-t border-gray-200 pt-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Bio</label>
                            <p class="text-gray-900">Web developer and Symfony enthusiast</p>
                        </div>
                    </div>
                </div>

                <!-- Account Activity -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Account Activity</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center py-3 border-b border-gray-200">
                            <span class="text-gray-600">Last Login</span>
                            <span class="text-gray-900 font-semibold">Today at 2:30 PM</span>
                        </div>
                        <div class="flex justify-between items-center py-3 border-b border-gray-200">
                            <span class="text-gray-600">Account Created</span>
                            <span class="text-gray-900 font-semibold">January 3, 2026</span>
                        </div>
                        <div class="flex justify-between items-center py-3">
                            <span class="text-gray-600">Email Verified</span>
                            <span class="text-green-600 font-semibold">✓ Yes</span>
                        </div>
                    </div>
                </div>

                <!-- Stats Section -->
                <div class="grid grid-cols-3 gap-4">
                    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg p-4 text-white text-center">
                        <div class="text-3xl font-bold">24</div>
                        <div class="text-sm text-purple-100">Posts</div>
                    </div>
                    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg p-4 text-white text-center">
                        <div class="text-3xl font-bold">156</div>
                        <div class="text-sm text-blue-100">Followers</div>
                    </div>
                    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg p-4 text-white text-center">
                        <div class="text-3xl font-bold">89</div>
                        <div class="text-sm text-green-100">Following</div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Actions</h3>
                    <div class="space-y-3">
                        <a href="{{ editUrl }}" class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
                            Edit Profile
                        </a>
                        <a href="{{ dashboardUrl }}" class="block w-full text-center bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200">
                            Go to Dashboard
                        </a>
                        <button class="w-full border-2 border-red-600 hover:bg-red-50 text-red-600 font-bold py-2 px-4 rounded-lg transition-colors duration-200" onclick="if(confirm('Delete account?')) window.location='{{ deleteUrl }}'">
                            Delete Account
                        </button>
                    </div>
                </div>

                <!-- Verification Status -->
                <div class="bg-green-50 border-2 border-green-200 rounded-xl p-6">
                    <div class="flex items-center mb-3">
                        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h4 class="text-lg font-bold text-green-900 ml-2">Verified</h4>
                    </div>
                    <p class="text-sm text-green-700">Your email has been verified. Your account is in good standing.</p>
                </div>

                <!-- Privacy Badge -->
                <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
                    <div class="flex items-center mb-3">
                        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <h4 class="text-lg font-bold text-blue-900 ml-2">Secure</h4>
                    </div>
                    <p class="text-sm text-blue-700">Your profile is protected with advanced security measures.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
