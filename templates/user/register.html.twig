{% extends 'base.html.twig' %}

{% block title %}User Registration{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 px-6 py-8">
            <h1 class="text-3xl font-bold text-white text-center">Create Account</h1>
            <p class="text-purple-100 text-center mt-2">Join our community today</p>
        </div>

        <!-- Form -->
        <form action="{{ submitUrl }}" method="POST" class="p-8 space-y-6">
            <!-- Username Field -->
            <div>
                <label for="username" class="block text-sm font-semibold text-gray-700 mb-2">
                    Username
                </label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors duration-200 text-gray-800 placeholder-gray-400"
                    placeholder="Choose a username"
                >
                <p class="text-xs text-gray-500 mt-1">3-20 characters, letters and numbers only</p>
            </div>

            <!-- Email Field -->
            <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                    Email Address
                </label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors duration-200 text-gray-800 placeholder-gray-400"
                    placeholder="your@email.com"
                >
                <p class="text-xs text-gray-500 mt-1">We'll send you a verification link</p>
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
                    Password
                </label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors duration-200 text-gray-800 placeholder-gray-400"
                    placeholder="••••••••"
                >
                <p class="text-xs text-gray-500 mt-1">At least 8 characters recommended</p>
            </div>

            <!-- Terms & Conditions -->
            <div class="flex items-start">
                <input
                    type="checkbox"
                    id="terms"
                    name="terms"
                    required
                    class="mt-1 h-4 w-4 text-purple-600 rounded border-gray-300 focus:ring-purple-500"
                >
                <label for="terms" class="ml-3 block text-sm text-gray-600">
                    I agree to the <span class="text-purple-600 font-semibold">Terms & Conditions</span>
                </label>
            </div>

            <!-- Submit Button -->
            <button
                type="submit"
                class="w-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-bold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg"
            >
                Create Account
            </button>

            <!-- Login Link -->
            <p class="text-center text-gray-600 text-sm">
                Already have an account?
                <a href="#" class="text-purple-600 font-semibold hover:text-purple-700">Sign in</a>
            </p>
        </form>

        <!-- Info Box -->
        <div class="bg-blue-50 px-6 py-4 border-t border-gray-200">
            <div class="flex items-start">
                <svg class="h-5 w-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zm-11-1a1 1 0 11-2 0 1 1 0 012 0zM8 7a1 1 0 000 2h6a1 1 0 000-2H8zm0 3a1 1 0 000 2h6a1 1 0 000-2H8z" clip-rule="evenodd" />
                </svg>
                <div class="ml-3">
                    <p class="text-sm text-blue-700">
                        <strong>Secure Registration:</strong> Your data is encrypted and protected.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
